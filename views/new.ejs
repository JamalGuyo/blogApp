<%- include('partials/header') %>
<div class="ui container main text segment">
  <div class="ui huge header">New Blog</div>
  <form class="ui form" action="/blogs" method="POST">
    <div class="field">
      <label for="Title">Title</label>
      <input type="text" name="blog[title]" placeholder="title" />
    </div>
    <div class="field">
      <label for="Image">Image</label>
      <input type="text" name="blog[image]" placeholder="image url" />
    </div>
    <div class="field">
      <label for="body">Body</label>
      <textarea name="blog[body]" placeholder="blog post goes here"></textarea>
    </div>
    <input class="ui basic button blue big" type="submit" />
  </form>
</div>
<%- include('partials/footer') %>
