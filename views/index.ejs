<%- include('partials/header') %>
<div class="ui container main">
  <div class="ui grid">
    <% blogs.forEach(blog => { %>
    <div class="four wide column">
      <a class="ui card" href="/blogs/<%= blog._id%>">
        <div class="content">
          <div class="header"><%= blog.title %></div>
          <div class="meta">
            <span class="category"><%= blog.created.toLocaleString() %></span>
          </div>
          <div class="description">
            <img class="ui centered medium image" src="<%= blog.image%>" />
            <p><%= blog.body %></p>
          </div>
        </div>
        <div class="extra content">
          <div class="left floated"></div>
          <div class="right floated author">
            <img
              class="ui avatar image"
              src="https://semantic-ui.com/images/avatar/small/matt.jpg"
            />
            Jamal
          </div>
        </div>
      </a>
    </div>
    <% }); %>
  </div>
</div>
<%- include('partials/footer') %>
